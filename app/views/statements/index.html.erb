
<h2>Your business is worth <%= Format.currency(@equity) %></h2>

<h3>Financial Statements</h3>
<table>
    <th><% @statements.each do |statement| %>
    <td align="right"><%= statement.period %></td>
    <% end %></th>

    <tr><td>Revenue</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.currency(statement.revenue) %></td>
        <% end %></tr>

    <tr><td>Cost of Goods Sold</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.cgs) %></td>
        <% end %></tr>

    <tr><td>Gross Profit</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.gp) %></td>
        <% end %></tr>

    <tr><td>Operating Expenses</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.opex) %></td>
        <% end %></tr>

    <tr><td>EBITDA</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.ebitda) %></td>
        <% end %></tr>

    <tr><td>D&A</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.da) %></td>
        <% end %></tr>

    <tr><td>EBIT</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.ebit) %></td>
        <% end %></tr>
    
    <tr><td>Interest</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.interest) %></td>
        <% end %></tr>

    <tr><td>Pretax Income</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.pretax) %></td>
        <% end %></tr>

    <tr><td>Tax</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.tax) %></td>
        <% end %></tr>

    <tr><td>Tax Rate</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.percent(statement.tax_rate) %></td>
        <% end %></tr>

    <tr><td>Net Income</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.net_income) %></td>
        <% end %></tr>

<!--This is a line break -->
    <tr><td height="12">     </td>
        <% @statements.each do |statement| %>
        <td align="right"><% Format.comma(statement.net_income) %></td>
        <% end %></tr>

        <tr><td>EBIAT</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.ebiat) %></td>
        <% end %></tr>

    <tr><td>Add Back D&A</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.da) %></td>
        <% end %></tr>


        <tr><td>Operating Cash Flow</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.ocf) %></td>
        <% end %></tr>        
    
    <tr><td>Capex</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.capex) %></td>
        <% end %></tr>

    <tr><td>Change in NWC</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.currency(statement.nwc_chg) %></td>
        <% end %></tr>

    <tr><td>Free Cash Flow</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.currency(statement.fcf) %></td>
        <% end %></tr>

    <tr><td>Time Span</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma(statement.year_span) %></td>
        <% end %></tr>
    
    <tr><td>Discount Factor</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.comma_four(statement.disc_factor) %></td>
        <% end %></tr>

    <tr><td>Discounted Cash Flow</td>
        <% @statements.each do |statement| %>
        <td align="right"><%= Format.currency_dec(statement.dcf) %></td>
        <% end %></tr>

    <tr><td></td>
        <% @statements.each do |statement| %>
        <td align="right"><%= link_to 'Edit', edit_statement_path(statement) %></td>
        <% end %></tr>
    
    <tr><td></td>
        <% @statements.each do |statement| %>
        <td align="right"><%= link_to 'Delete', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %></tr>
</table>

<h3>Calculations</h3>
<table>
<tr><td>Terminal Growth Rate</td>
    <td align="right"><%= Format.percent_dec(Statement.terminal) %></td>
</tr>

<tr><td>WACC</td>
    <td align="right"><%= Format.percent_dec(Statement.wacc) %></td>
</tr>
<tr>
    <td>Extra Year DCF</td>
    <td align="right"><%= Format.currency_dec(@extra_year_dcf) %></td>
</tr>
<tr>
    <td>Continuing Value</td>
    <td align="right"><%= Format.currency_dec(@cv) %></td>
</tr>
<tr>
    <td>Discounted CV</td>
    <td align="right"><%= Format.currency_dec(@disc_cv) %></td>
</tr>
<tr>
    <td>Sum of Explicit DCF</td>
    <td align="right"><%= Format.currency_dec(@dcf_explicit) %></td>
</tr>
<tr>
    <td>Enterprise Value</td>
    <td align="right"><%= Format.currency_dec(@ev) %></td>
</tr>
<tr>
    <td>Current Debt</td>
    <td align="right"><%= Format.currency_dec(Statement.current_debt) %></td>
</tr>
<tr>
    <td>Equity</td>
    <td align="right"><%= Format.currency_dec(@equity) %></td>
</tr>
</table>
<br />


