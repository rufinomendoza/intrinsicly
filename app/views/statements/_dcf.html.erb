<table class="table table-hover">
    <th><% @statements.each do |statement| %>
    <td align="right" style="font-weight:bold"><%= statement.period %></td>
    <% end %></th>

<!--
        <tr><td>EBIAT</td>
        <% @statements.each do |statement| %>
